<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Widget.AppTheme.LikeButton" parent="Widget.AppTheme.NMediaButton">
        <item name="iconTint">@color/like_button_tint</item>
        <item name="backgroundTint">@android:color/transparent</item>
    </style>

    <style name="Widget.AppTheme.MenuButton" parent="Widget.AppTheme.NMediaButton">
        <item name="iconPadding">@dimen/zero_dp</item>
        <item name="iconGravity">textEnd</item>
    </style>

    <style name="Widget.AppTheme.ClearButton" parent="Widget.AppTheme.NMediaButton">
        <item name="backgroundTint">@color/white</item>
        <item name="android:textColor">?attr/colorControlNormal</item>
    </style>

    <style name="Widget.AppTheme.NMediaButton" parent="Widget.MaterialComponents.Button.TextButton.Icon">
        <item name="iconTint">?attr/colorControlNormal</item>
        <item name="android:minWidth">@dimen/zero_dp</item>
        <item name="android:textColor">?attr/colorControlNormal</item>
        <item name="rippleColor">@color/ripple_button</item>
        <item name="layout_constraintHeight">32dp</item>
        <item name="iconPadding">@dimen/indent</item>
        <item name="android:paddingTop">@dimen/zero_dp</item>
        <item name="android:paddingBottom">@dimen/zero_dp</item>
    </style>

    <style name="Widget.AppTheme.FAB" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="fabSize">mini</item>
        <item name="android:tint">?attr/colorControlNormal</item>
        <item name="android:backgroundTint">@color/ripple_button</item>
        <item name="borderWidth">@dimen/zero_dp</item>
        <item name="android:strokeColor">@color/ripple_button</item>
    </style>

    <style name="Widget.AppTheme.NMediaOutlinedButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textColor">?attr/colorControlNormal</item>
        <item name="strokeColor">?attr/colorControlNormal</item>
        <item name="strokeWidth">@dimen/stroke_width</item>
    </style>

    <style name="Widget.AppTheme.AnotherStateText" parent="Widget.MaterialComponents.TextView">
        <item name="android:layout_marginBottom">@dimen/indent</item>
        <item name="android:paddingStart">@dimen/avatar_size</item>
        <item name="android:paddingEnd">@dimen/avatar_size</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="Widget.AppTheme.NMediaOutlinedTextInput" parent="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textColorHint">@color/ripple_button</item>
        <item name="hintAnimationEnabled">false</item>
    </style>

</resources>